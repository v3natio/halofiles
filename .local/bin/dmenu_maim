#!/bin/sh

# A script which acts as a frontend to maim for taking screenshots.

case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)" | dmenu -l 6 -p "Screenshot which area?")" in
	"a selected area") maim -s "/home/hooregi/Media/Pictures/Screenshots/$(date '+%y%m%d-%H%M-%S').png" ;;
	"current window") maim -i "$(xdotool getactivewindow)" "~/Media/Pictures/Screenshots/$(date '+%y%m%d-%H%M-%S').png" ;;
	"full screen") maim "/home/hooregi/Media/Pictures/Screenshots/$(date '+%y%m%d-%H%M-%S').png" ;;
	"a selected area (copy)") maim -s | xclip -selection clipboard -t image/png ;;
	"current window (copy)") maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
	"full screen (copy)") maim | xclip -selection clipboard -t image/png ;;
esac
