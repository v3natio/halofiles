*.lua=î˜ :\
*.ml=îž§:\
*.pl=î©:\
*.py=î˜†:\
*.rs=îž¨:\
*.sql=îœ†:\
*.vim=îŸ…:\
"

if pacman -Qs libxft >/dev/null 2>&1; then
	# Start graphical server on user's current tty if not already running.
	[ "$(tty)" = "/dev/tty1" ] && ! pidof -s Xorg >/dev/null 2>&1 && exec startx "$XINITRC"
else
  echo "\033[31mIMPORTANT\033[0m: Note that \033[32m\`libxft\`\033[0m must be installed.
Please run:
	\033[32mpacman -S libxft\033[0m
Afterwards, you may start the graphical server by running \`startx\`."
fi
